<h1>Listing selfies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selfies.each do |selfie| %>
      <tr>
        <td><%= link_to 'Show', selfie %></td>
        <td><%= link_to 'Edit', edit_selfie_path(selfie) %></td>
        <td><%= link_to 'Destroy', selfie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Selfie', new_selfie_path %>
